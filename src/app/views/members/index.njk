{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">
        <a href="/members/create">Novo</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Membro</th>
                    <th>Email</th>
                    <th>Peso</th>
                    <th>Altura</th>
                    <th>Ac√£o</th>
                </tr>
            </thead>
            <tbody>
            {% for member in members %}
                <tr>
                    <td>
                        <span style="background-image: url({{ member.avatar_url }})"></span>
                        {{ member.name }}
                    </td>
                    <td><div>{{ member.email }}</div></td>
                    <td>{{ member.weigth }} kg</td>
                    <td>{{ member.heigth }}cm</td>
                    <td><a href="/members/{{ member.id }}">Ver</a></td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>

{% endblock content %}